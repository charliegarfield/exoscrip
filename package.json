{
    "name": "exoscript",
    "displayName": "Exoscript Support",
    "description": "Support for the Exoscript language from I was a Teenage Exocolonist",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.63.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [{
            "id": "exoscript",
            "aliases": ["Exoscript", "exoscript"],
            "extensions": [".txt",".exo",".exotxt",".exo.txt"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "exoscript",
            "scopeName": "source.sample",
            "path": "./syntaxes/sample.tmLanguage"
        }]
    }
}